<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.filial.FilialsFragment"
    android:orientation="vertical"
    android:background="@color/client_main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Филиалы"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:textColor="@color/client_main"/>

        <ImageButton
            android:id="@+id/notificationsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:src="@drawable/notification_icon"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filialsRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"/>

</LinearLayout>