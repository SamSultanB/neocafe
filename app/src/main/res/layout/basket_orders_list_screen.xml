<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/client_main_background">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/basketRv"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/addMoreBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        app:cornerRadius="10dp"
        android:text="Добавьте еще"
        android:textSize="16dp"
        android:padding="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/button_background"
        app:strokeColor="@color/button_background"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="18dp"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Итого:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"
            android:textColor="@color/client_main"/>
        <TextView
            android:id="@+id/fullPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="1000 c"
            android:visibility="gone"
            android:textSize="18sp"
            android:textColor="@color/hint_color"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/priceWithDiscountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="730 c"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/button_background"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/takeAwayBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Возьму с собой"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/edit_text_background"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/inShopBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background"
            android:padding="16dp"
            android:text="В заведении"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/orderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/button_background"
        android:padding="20dp"
        android:text="Заказать"
        android:textSize="16sp"
        app:cornerRadius="10dp" />

</LinearLayout>